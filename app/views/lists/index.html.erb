<div class=" mt-5">
  <div class="row mt-5">
    <div class="col-12 header  justify-content-right" style="background-image: url(<%= asset_path('film_roll.jpg') %>)">
      <h1 class="mt-5 pt-3 text-center" > Create. Share. Explore. </h1>
    </div>
  </div>
<div>
  <div class="container">
    <div class="row my-5" id="top_lists">
      <div class="container-fluid py-2">
        <h2 class="font-weight-light">Top Lists</h2>
        <div class="d-flex flex-row flex-nowrap overflow-auto">
          <% @top_lists.each do |list| %>
            <div class="co-12 col-sm-6 col-md-4">
              <%= link_to list_path(list), class: "text-decoration-none" do %>
                <div class="card bg-dark text-white me-3">
                  <%= image_tag('tvs.jpg', class: "card-img") %>
                  <div class="card-img-overlay">
                    <h2 class="card-title"><%= list.name %></h2>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container mt-4" id="all_lists">
      <div>
        <h2> All lists </h2>
      </div>
      <table class="table table-dark table-striped table-hover">
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td> <%= link_to list.name, list_path(list)%> </td>
              <td> <%= list.bookmarks.count %> </td>
              <td> <%= list.updated_at %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <%= link_to '+ Create new list', new_list_path, class:"btn btn-primary" %>
</div>
